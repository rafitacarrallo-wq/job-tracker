generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Application {
  id              String            @id @default(cuid())
  company         String
  companyLogo     String?
  companyWebsite  String?
  position        String
  applicationDate DateTime          @default(now())
  status          String            @default("SAVED")
  jobUrl          String?
  salaryMin       Int?
  salaryMax       Int?
  salaryExpected  Int?
  interestLevel   Int               @default(3)
  source          String            @default("OTHER")
  notes           String?
  nextStep        String?
  nextStepDate    DateTime?
  cvUrl           String?
  cvFileName      String?
  coverLetterUrl  String?
  coverLetterFileName String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  contacts        ApplicationContact[]
  tasks           Task[]
}

model Contact {
  id           String   @id @default(cuid())
  name         String
  company      String?
  position     String?
  linkedinUrl  String?
  email        String?
  phone        String?
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  interactions Interaction[]
  applications ApplicationContact[]
  reminders    Reminder[]
  tasks        Task[]
}

model Interaction {
  id        String   @id @default(cuid())
  contactId String
  content   String
  date      DateTime @default(now())
  createdAt DateTime @default(now())

  contact   Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
}

model Reminder {
  id        String   @id @default(cuid())
  contactId String
  title     String
  dueDate   DateTime
  completed Boolean  @default(false)
  createdAt DateTime @default(now())

  contact   Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
}

model ApplicationContact {
  id            String @id @default(cuid())
  applicationId String
  contactId     String

  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  contact       Contact     @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@unique([applicationId, contactId])
}

model WatchlistCompany {
  id          String   @id @default(cuid())
  name        String
  logo        String?
  notes       String?
  careersUrl  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tasks       Task[]
}

model Task {
  id            String    @id @default(cuid())
  title         String
  description   String?
  dueDate       DateTime?
  completed     Boolean   @default(false)
  link          String?

  applicationId String?
  application   Application? @relation(fields: [applicationId], references: [id], onDelete: SetNull)

  watchlistId   String?
  watchlist     WatchlistCompany? @relation(fields: [watchlistId], references: [id], onDelete: SetNull)

  contactId     String?
  contact       Contact? @relation(fields: [contactId], references: [id], onDelete: SetNull)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
